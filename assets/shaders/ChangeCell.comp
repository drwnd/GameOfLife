#version 460 core

layout (local_size_x = 1, local_size_y = 1, local_size_z = 1) in;

layout(r32ui, binding = 0) restrict uniform uimage2D nextSource;

uniform ivec2 position;

void main() {
    ivec2 coord = ivec2(position.x, position.y);

    uint value = imageLoad(nextSource, coord).r;
    value = 1 - value;
    imageStore(nextSource, coord, uvec4(value));
}