#version 460 core

layout (local_size_x = 1, local_size_y = 1, local_size_z = 1) in;

layout(r8, binding = 0) restrict uniform image2D nextSource;

uniform ivec2 position;

void main() {
    float value = imageLoad(nextSource, position).r;
    int ivalue = value == 0.0 ? 0 : 1;
    imageStore(nextSource, position, vec4(1 - ivalue));
}